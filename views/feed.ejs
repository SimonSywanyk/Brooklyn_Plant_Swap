<%- include('partials/header') -%>

  <div class="container">
    <ul role="list" class="grid grid-cols-1 gap-6 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-span-1 flex flex-col divide-y divide-gray-200 rounded-lg bg-white text-center shadow">
            <div class="flex flex-1 flex-col p-8 bg-grey-200 hover:bg-green-50">
              <a href="/post/<%= posts[i]._id%>">
               <h3 class="rounded-full bg-green-100 px-2 py-1 text-lg font-medium text-green-800"><%= posts[i].title %></h3>
               <br>
               <img lass="mx-auto h-32 w-32 flex-shrink-0 rounded-full" src="<%= posts[i].image%>">
             
                <br>
              <dl class="mt-1 flex flex-grow flex-col justify-between">
                <dt class="sr-only">Plant Type</dt>
                <dd class="text-sm text-gray-500 h-auto"><%= posts[i].caption %></dd>
              </dl>
            </a>
            </div>
            <div>
              <div class="-mt-px flex divide-x divide-gray-200">
                <!-- Message User -->
                <div class="flex w-0 flex-1">
                  <a href="" class="relative -mr-px inline-flex w-0 flex-1 items-center justify-center rounded-bl-lg border border-transparent py-4 text-sm font-medium text-gray-700 hover:text-blue-700 hover:bg-blue-100">
                    <i class="fa-duotone fa-messages"></i>
                    <span class="ml-3">Message</span>
                  </a>
                </div>
                <!-- Save (other users) or Delete (post user) -->
                <div class="-ml-px flex w-0 flex-1">
                  <a href="" class="relative inline-flex w-0 flex-1 items-center justify-center rounded-br-lg border border-transparent py-4 text-sm font-medium text-gray-700 hover:text-red-700 hover:bg-red-100">
                    <i class="fa-solid fa-heart"></i>
                    <span class="ml-3">Save</span>
                  </a>
                </div>
            </div>
          </li>
        <% } %>
        </ul>
    </div>
  </div>  
<%- include('partials/footer') -%>
